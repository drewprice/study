<%= form_for(@article, html: {multipart: true}) do |f| %>
	
	<% if @article.errors.present? %>
		<ul>
			<% @article.errors.full_messages.each do |error| %>
				<li><%= error %></li>
			<% end %>
		</ul>
	<% end %>

		<p>
			<%= f.label :title %><br>
			<%= f.text_field :title %>
		</p>

		<p>
			<%= f.label :body %><br>
			<%= f.text_area :body %>
		</p>

		<p>
			<%= f.label :tag %><br>
			<%= f.text_field :tag_list %>
		</p>

		<p>
			<%= f.label :image, "Attach a New Image" %><br>
			<%= f.file_field :image %>
		</p>

		<p>
			<%= f.submit %>
		</p>
<% end %>