<h1>Listing Authors</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.username %></td>
        <td><%= author.email %></td>
        <td class="author_functions"><%= link_to 'Edit', edit_author_path(author) %></td>
        <td class="vert_line">|</td>
        <td class="author_functions"><%= link_to 'Destroy', author, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "view all articles", articles_path, class: "nav_buttons" %>
<%= link_to 'New Author', new_author_path, class: "nav_buttons", id: "nav_new_article" %>
<%= link_to "view all tags", tags_path, class: "nav_buttons" %>